{
  "compilerOptions": {
    "outDir": "./build",
    "module": "commonjs",
    "lib": ["es6"],
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": false,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "types": [],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
